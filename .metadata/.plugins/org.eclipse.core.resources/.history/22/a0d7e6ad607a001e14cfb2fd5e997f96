package hoja2Bucles;

import java.util.Scanner;

public class Ejer23 {

	public static void main(String[] args) {
		// Escribe una aplicaci칩n que solicite cinco notas.
		// Si el usuario escribe una nota que no est치 entre
		// 0 y 10 se le informar치 del error y se le volver치 a pedir el dato.
		Scanner entrada = new Scanner(System.in);
		double nota = entrada.nextDouble();
		int contador=1;
		
			System.out.println("Escribe una nota entre 0 y 10: ");
			nota = entrada.nextDouble();
			
			while(nota > 0 || nota <= 10) {
				do {
					System.out.println(contador + " nota: " + nota );
					contador++;
				}while(contador<=5);
				
			}
		

	}
}
