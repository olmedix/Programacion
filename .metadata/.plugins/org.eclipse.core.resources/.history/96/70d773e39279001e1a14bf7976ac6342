package hoja2Bucles;

public class Ejer15 {

	public static void main(String[] args) {
		// Crea una aplicaci√≥n que calcule una lista con las potencias de 3 menores que 12000. 
		//Haz que en cada pasada del bucle se muestre el exponente y el valor de la potencia. 
		//Utiliza un bucle do-while
		
		int exponente=0;
		int potencia=1;
		
		do {
			System.out.println("3 ^"+ exponente + ": " + potencia );
			exponente++;
			potencia = (int) Math.pow(3, exponente);
			
			
		}while(potencia<12000);
	}

}
