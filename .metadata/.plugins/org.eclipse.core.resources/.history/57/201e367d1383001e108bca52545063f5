package Hoja1;

import java.util.Scanner;

public class Ejer06 {

	public static void main(String[] args) {
		// Escribe un programa que pida por consola los precios de diez productos y los
		// guarde en un array.
		// Haz que despu√©s se muestren todos los valores mediante un bucle for.

		Scanner entrada = new Scanner(System.in);
		String[] productos = new String[10];

		System.out.print("Escribe el nombre de 10 productos:");
		System.out.print("Producto: ");
		for (int i = 0; i < productos.length; i++) {

			productos[i] = entrada.nextLine();
			System.out.print("Producto: ");

		}

		for (int i = 0; i < productos.length; i++) {

			System.out.println("Lista de productos:\n " + productos[i]);
		}

	}

}
